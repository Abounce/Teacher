<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.administrator.teacher.activity.ChooseTorS">


 <Button

     android:text="学生"
     android:gravity="center"
     android:layout_width="600px"
     android:layout_height="200px"
     android:layout_marginTop="138dp"
     android:id="@+id/bt_choose_student"
     android:layout_alignParentTop="true"
     android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/bt_choose_teacher"
        android:layout_width="600px"
        android:layout_height="200px"
        android:text="家长"
        android:layout_marginTop="32dp"
        android:layout_below="@+id/bt_choose_student"
        android:layout_alignLeft="@+id/bt_choose_student"
        android:layout_alignStart="@+id/bt_choose_student"
        android:layout_alignRight="@+id/bt_choose_student"
        android:layout_alignEnd="@+id/bt_choose_student" />

    <TextView
        android:textColor="#f90000"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="20dp"
        android:text="请问你选择你是学生还是家长"
        android:layout_alignLeft="@+id/bt_choose_student"
        android:layout_alignStart="@+id/bt_choose_student"
        android:layout_alignRight="@+id/bt_choose_student"
        android:layout_alignEnd="@+id/bt_choose_student" />

</com.zhy.autolayout.AutoRelativeLayout>

